<div class="banner-lists flex-column">
  <h2>Biblioteca de películas</h2>
  <%= link_to "Crea una nueva categoría", new_list_path, class: "btn btn-success mt-3" %>
</div>
<div class="container">
  <div class="movie-categories">
      <h1 style="margin: 10px 20px;">Ver todas las categorias:</h1>
      <div class="cards-box d-flex">
        <%@lists.each do |list| %>
        <div class="card rounded shadow" >
          <h5 style="font-weight: bold;"><%= link_to list.name, list_path(list), class: "list-title" %></h5>
          <p style="position: absolute; right: 20px; bottom: 0px;"> <%= link_to "X", list_path(list), method: :delete, data: { confirm: "Delete this List?" }, class: "delete-button" %></p>
        </div>
        <% end %>
      </div>
  </div>
</div>