<div class="container">
  <div class="row">
    <div class="col-6 m-auto">
      <h2 style="margin-top: 20px;">Agregar una nueva categoría</h2>
      <%= simple_form_for @list do |f|%>
        <%= f.input :name  %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Añadir categoría", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>